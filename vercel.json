{
  "builds": [
    {
      "src": "api/main.py",
      "use": "@vercel/python",
      "config": { 
        "maxLambdaSize": "15mb",
        "zeroConfig": true
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "api/main.py"
    }
  ],
  "build": {
    "env": {
      "PYTHONUNBUFFERED": "1"
    }
  },
  "env": {
    "DISABLE_BUILD_CACHE": "1"
  },
  "buildCommand": "chmod +x build.sh && ./build.sh"
}
